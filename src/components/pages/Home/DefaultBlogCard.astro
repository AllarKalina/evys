---
const { post } = Astro.props;
---

<div class="relative flex flex-col overflow-hidden rounded-lg shadow-lg">
  <div class="relative flex-shrink-0 h-full">
    <div class="absolute bg-zinc-900/50 backdrop-blur-sm inset-0 h-full w-full">
    </div>
    <img class="h-full w-full object-cover" src={post.imageUrl} alt="" />
  </div>
  <div class="absolute flex flex-col justify-between p-6 h-full">
    <div class="flex flex-col h-2/3">
      <p class="text-md font-semibold text-emerald-500">
        <a href={post.category.href} class="hover:underline">
          {post.category.name}
        </a>
      </p>
      <a href={post.href} class="mt-auto block">
        <p class="text-4xl font-semibold text-white">
          {post.title}
        </p>
      </a>
    </div>
    <div class="text-md text-white h-1/3 items-end flex space-x-1">
      <time datetime={post.datetime}>{post.date}</time>
      <span aria-hidden="true">&middot;</span>
      <span>{post.readingTime} read</span>
    </div>
  </div>
</div>
