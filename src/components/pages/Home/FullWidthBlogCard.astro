---
const { post } = Astro.props;
---

<div
  class="flex overflow-hidden rounded-lg shadow-lg lg:col-span-2 lg:row-span-1 hover:scale-[102%] transition-all cursor-pointer"
>
  <div class="flex flex-1 flex-col justify-between bg-white p-6">
    <div class="flex-1">
      <p class="font-semibold text-cyan-600">
        <a href={post.category.href} class="hover:underline">
          {post.category.name}
        </a>
      </p>
      <a href={post.href} class="mt-3 block">
        <p class="text-2xl font-semibold text-zinc-900">
          {post.title}
        </p>
      </a>
    </div>
    <div class="flex space-x-1 text-sm font-medium text-zinc-500 mt-6">
      <time datetime={post.datetime}>{post.date}</time>
      <span aria-hidden="true">&middot;</span>
      <span>{post.readingTime} read</span>
    </div>
  </div>
  <div class="h-full w-1/2">
    <img class="w-full object-cover" src={post.imageUrl} alt="" />
  </div>
</div>
