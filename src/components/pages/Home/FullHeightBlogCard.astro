---
const { post } = Astro.props;
---

<div
  class="flex flex-col overflow-hidden rounded-lg shadow-lg lg:col-span-1 lg:row-span-2 hover:scale-[102%] transition-all cursor-pointer"
>
  <div class="flex-shrink-0">
    <img class="h-48 lg:h-64 w-full object-cover" src={post.imageUrl} alt="" />
  </div>
  <div class="flex flex-1 flex-col justify-between bg-white p-6">
    <div class="flex-1">
      <p class="font-semibold text-rose-600">
        <a href={post.category.href} class="hover:underline">
          {post.category.name}
        </a>
      </p>
      <a href={post.href} class="mt-3 block">
        <p class="text-xl lg:text-2xl font-semibold text-zinc-900">
          {post.title}
        </p>
        <p class="mt-3 text-zinc-600 leading-relaxed">
          {post.description}
        </p>
      </a>
    </div>
    <div class="flex space-x-1 text-sm font-medium text-zinc-500 mt-6">
      <time datetime={post.datetime}>{post.date}</time>
      <span aria-hidden="true">&middot;</span>
      <span>{post.readingTime} read</span>
    </div>
  </div>
</div>
