---

<Layout title="Eesti Veterinaarmeditsiini Üliõpilaste Selts">
  <main class="flex flex-col items-center">
    <Navbar client:load currentPath={pathname} />
    <SectionWrapper>
      <div
        class="pt-6 lg:pt-0 px-4 flex flex-col lg:flex-row justify-between max-w-3xl mx-auto 2xl:max-w-5xl"
      >
        <div
          class="flex flex-col grow max-w-sm lg:max-w-md w-full 2xl:max-w-xl"
        >
          <h1
            class="text-5xl text-zinc-600 font-semibold leading-tight lg:text-5xl mb-12"
          >
            Blogi
          </h1>
          <div class="flex space-x-1 text-sm lg:text-base mb-6">
            <a href="#" class="text-emerald-600 font-semibold hover:underline">
              Case Study
            </a>
            <span class="text-zinc-700" aria-hidden="true">&middot;</span>
            <span class="text-zinc-700">{posts[0].readingTime} read</span>
          </div>
          <div
            class="flex flex-col hover:bg-zinc-200/30 cursor-pointer p-4 -m-4 rounded-lg"
          >
            <div class="flex-shrink-0 hidden lg:block">
              <img
                class="h-48 lg:h-[500px] w-full object-cover rounded-lg shadow-lg"
                src={posts[0].imageUrl}
                alt=""
              />
            </div>
            <p
              class="text-2xl font-semibold text-zinc-900 mt-3 lg:text-4xl lg:mt-6"
            >
              {posts[0].title}
            </p>
            <p class="mt-3 text-sm lg:text-base text-zinc-600 lg:mt-4">
              {posts[0].description}
            </p>
            <div class="flex-shrink-0 mt-6 lg:hidden">
              <img
                class="h-48 lg:h-64 w-full object-cover rounded-lg shadow-lg"
                src={posts[0].imageUrl}
                alt=""
              />
            </div>
          </div>
        </div>
        <div
          class="flex flex-none flex-col mt-12 max-w-sm lg:max-w-xs lg:mt-36"
        >
          <h2
            class="text-xl text-emerald-600 font-semibold leading-6 lg:text-2xl"
          >
            Hiljutised postitused
          </h2>
          {
            posts.slice(0, 3).map((post, idx) => {
              return (
                <div class="mt-6">
                  <DefaultBlogCard post={post} />
                </div>
              );
            })
          }
        </div>
      </div>
    </SectionWrapper>
    <Footer />
  </main>
</Layout>
