---
import SectionWrapper from "../components/UI/SectionWrapper.astro";
import Layout from "../layouts/Layout.astro";
import AboutSection from "../modules/HomePage/AboutSection.astro";
import BlogSection from "../modules/HomePage/BlogSection.astro";
import HeroIllustration from "../modules/HomePage/HeroIllustration.astro";
import HeroSection from "../modules/HomePage/HeroSection.astro";
import SponsorSection from "../modules/HomePage/SponsorSection.astro";
---

<Layout title="Eesti Veterinaarmeditsiini Üliõpilaste Selts">
  <main class="flex flex-col items-center">
    <SectionWrapper className="bg-emerald-50/40 overflow-hidden">
      <HeroIllustration />
      <HeroSection />
    </SectionWrapper>
    <SponsorSection />
    <SectionWrapper
      className="bg-slate-50 border-b border-slate-200 shadow-lg shadow-slate-200/50"
    >
      <AboutSection />
    </SectionWrapper>
    <SectionWrapper className="bg-emerald-50/40">
      <figure class="bg-grid absolute bottom-0 left-0 z-0 h-full w-full">
      </figure>
      <BlogSection />
    </SectionWrapper>
  </main>
</Layout>
