---
import Footer from "../components/Footer/Footer.astro";
import Navbar from "../components/Navbar/Navbar";
import Blog from "../components/pages/Home/Blog.astro";
import SectionWrapper from "../components/UI/SectionWrapper.astro";
import Layout from "../layouts/Layout.astro";
import AboutSection from "../modules/HomePage/AboutSection.astro";
import HeroIllustration from "../modules/HomePage/HeroIllustration.astro";
import HeroSection from "../modules/HomePage/HeroSection.astro";
import SponsorSection from "../modules/HomePage/SponsorSection.astro";

const { pathname } = Astro.url;
---

<Layout title="Eesti Veterinaarmeditsiini Üliõpilaste Selts">
  <main class="flex flex-col items-center">
    <Navbar client:load currentPath={pathname} />
    <SectionWrapper className="bg-emerald-50/40 backdrop-blur overflow-hidden">
      <HeroIllustration />
      <HeroSection />
    </SectionWrapper>
    <SponsorSection />
    <SectionWrapper
      className="bg-slate-100 border-b border-slate-200 shadow shadow-slate-200"
    >
      <AboutSection />
    </SectionWrapper>
    <SectionWrapper className="bg-emerald-50/40 backdrop-blur">
      <Blog />
    </SectionWrapper>
    <Footer />
  </main>
</Layout>
