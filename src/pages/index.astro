---
import { Image } from '@astrojs/image/components';
import Navbar from '../components/Navbar/Navbar';
import Layout from '../layouts/Layout.astro';
import '../styles.css';
---

<Layout title="Eesti Veterinaarmeditsiini Üliõpilaste Selts">
  <main class="flex flex-col items-center">
    <Navbar client:load />
    <section class="relative min-h-screen w-full overflow-hidden">
      <div class="absolute top-0 left-0 h-3/6 w-full bg-emerald-600 z-0"></div>
      <div class="z-20 relative px-4 pt-[140px] flex flex-col gap-16">
        <h1 class="text-4xl text-white font-semibold leading-tight">
          Eesti Veterinaarmeditsiini Üliõpilaste <br /> Selts
        </h1>
        <div class="flex shrink-0 gap-5 justify-center">
          <div
            class="w-[208px] h-[231px] flex-none overflow-hidden rounded-lg -rotate-2 shadow-lg"
          >
            <Image
              src="./People.webp"
              width={208}
              aspectRatio="9:10"
              alt="image"
              format="webp"
              class="object-contain"
            />
          </div>
          <div
            class="w-[208px] h-[231px] flex-none overflow-hidden rounded-lg rotate-2 shadow-lg"
          >
            <Image
              src="./People.webp"
              width={208}
              aspectRatio="9:10"
              alt="image"
              format="webp"
              class="object-contain"
            />
          </div>
          <div
            class="w-[208px] h-[231px] flex-none overflow-hidden rounded-lg rotate-2 shadow-lg"
          >
            <Image
              src="./Party.jpg"
              width={200}
              aspectRatio="3:4"
              alt="image"
              format="jpg"
              class="object-contain"
            />
          </div>
        </div>
        <div class="flex flex-col gap-2">
          <div class="flex items-center gap-2">
            <div class="h-1 w-6 bg-emerald-600 rounded-full"></div>
            <h6 class="text-emerald-600 font-bold">MEIE MISSIOON</h6>
          </div>
          <h2 class="font-bold text-2xl text-slate-800">
            Tutvustada ja arendada veterinaarmeditsiini eriala üliõpilaste õppe-
            ja teadustööd.
          </h2>
          <p class="text-slate-800 mt-2 mb-16">
            Pakkudes loomaarstiks õppivatele tudengitele erinevaid võimalusi
            mitmekülgseks arenguks, eneseteostuseks ja meeleolukateks
            tudengiaastateks, loodame kaasa aidata nende oskuste täienemisse.
          </p>
        </div>
      </div>
    </section>
    <section class="relative w-full overflow-hidden">
      {/* Testimonials */}
      <div class="bg-emerald-600">
        <div class="mx-auto max-w-7xl py-16 px-4">
          <div class="flex items-center justify-center gap-3">
            <div class="h-1 w-6 bg-white rounded-full"></div>
            <h6 class="text-white font-bold">MEIE TOETAJAD</h6>
            <div class="h-1 w-6 bg-white rounded-full"></div>
          </div>
          <div class="mt-2 -ml-8 flex flex-wrap justify-between lg:-ml-4">
            <div
              class="mt-4 ml-8 flex flex-shrink-0 flex-grow lg:ml-4 lg:flex-grow-0"
            >
              <Image
                src="./Valge-01.png"
                height={60}
                width={200}
                alt="image"
                format="webp"
              />
            </div>
            <div
              class="mt-4 ml-8 flex flex-shrink-0 flex-grow lg:ml-4 lg:flex-grow-0"
            >
              <Image
                src="./sumboolika_4.png"
                height={20}
                width={80}
                alt="image"
                format="webp"
              />
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="min-h-screen w-full"></section>
  </main>
</Layout>
