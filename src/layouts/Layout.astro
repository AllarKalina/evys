---
import Footer from "../components/Footer/Footer.astro";
import Navbar from "../components/Navbar/Navbar";
import SideNav from "../components/pages/Info/SideNav";
import "../styles.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
const url = Astro.url;

const isInfo = url.pathname.split("/")[1] == "info";
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative antialiased">
    <div data-turbo-permanent id="header">
      <Navbar client:load currentPath={url.pathname} />
    </div>
    <slot />
    {
      isInfo && (
        <div
          id="side"
          data-turbo-permanent
          class="absolute top-[6.5rem] left-0 h-[90%] w-[300px]"
        >
          <SideNav client:load currentPath={url.pathname} />
        </div>
      )
    }
    <div data-turbo-permanent id="footer">
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  html {
    font-feature-settings: "cv02", "cv03", "cv04", "cv11" !important;
  }
</style>

<script>
  import "../scripts/router.js";
</script>
