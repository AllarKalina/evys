---
import { ArchiveBoxIcon, ChevronRightIcon } from "@heroicons/react/24/outline";
import SectionHeader from "../../components/SectionHeader";
import AnimatedBlock from "../../components/UI/Animated/AnimatedBlock";
import { getAssetURL } from "../../utils/get-asset-url";
import { getDirectusClient } from "../../utils/get-directus-client";

type BlogPost = {
  id: string;
  title: string;
  slug: string;
  description: string;
  body: string;
  cover_photo: string;
  date_created: string;
};

const directus = await getDirectusClient();
const blogs = (await directus.items("blog").readByQuery()).data as BlogPost[];
---

<main class="relative z-20">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <SectionHeader
      client:visible
      color="rose"
      smallHeader="Blogi"
      header="Loe ja tutvu meie tegevustega"
    />
    <AnimatedBlock client:visible>
      <div
        class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3"
      >
        {
          blogs.map((post) => (
            <article class="group relative isolate flex flex-col justify-end overflow-hidden rounded-lg bg-zinc-900 px-8 pb-8 pt-80 transition-transform hover:scale-[102%] sm:pt-48 lg:pt-80">
              <img
                loading="lazy"
                src={getAssetURL({
                  id: post.cover_photo,
                  width: 400,
                  quality: 90,
                  fit: "cover",
                })}
                alt=""
                class="absolute inset-0 -z-10 h-full w-full object-cover"
              />
              <div class="absolute inset-0 -z-10 bg-gradient-to-t from-zinc-900 via-zinc-900/40" />
              <div class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-zinc-900/10" />

              <div class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-zinc-200">
                <time date-time={new Date(post.date_created)} class="mr-8">
                  {new Date(post.date_created).toLocaleDateString("et", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
                <div class="-ml-4 flex items-center gap-x-4">
                  <svg
                    viewBox="0 0 2 2"
                    class="-ml-0.5 h-0.5 w-0.5 flex-none fill-white/50"
                  >
                    <circle cx={1} cy={1} r={1} />
                  </svg>
                  Kadi Saviauk
                </div>
              </div>
              <h3 class="mt-3 text-xl font-semibold leading-6 text-white">
                <a href={`/blog/${post.slug}`}>
                  <span class="absolute inset-0" />
                  {post.title}
                </a>
              </h3>
              <p class="mt-3 font-medium leading-7 text-zinc-200">
                <a href={`/blog/${post.slug}`}>
                  <span class="absolute inset-0" />
                  {post.description.split(" ").slice(0, 10).join(" ") + "..."}
                </a>
              </p>
              <button class="mt-3 flex items-center gap-0.5 text-white transition-all hover:text-zinc-200 group-hover:gap-2">
                <span class="text-base font-semibold">Loe blogi </span>
                <ChevronRightIcon className="h-4 w-4 stroke-2 text-inherit" />
              </button>
            </article>
          ))
        }
        <div
          class="flex flex-col items-center justify-center gap-6 rounded-lg bg-zinc-100 text-center"
        >
          <h1 class="text-4xl font-semibold text-zinc-300">
            Uued postitused tulevkul
          </h1>
          <ArchiveBoxIcon className="h-16 w-16 text-zinc-300" />
        </div>
      </div>
    </AnimatedBlock>
  </div>
</main>
